pipeline {
  environment {
    imagename = "lumendonca/jenkins_py"
    registryCredential = 'lucasf66'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/lumendoncapag/jenkins', branch: 'master', credentialsId: 'lumendoncapag'])
 
      }
    }
    stage('Building image') {
      steps{
        script {
          sh 'ls && docker build -t lumendonca/jenkins_py:3.0 .'
        }
      }
    }
     stage('Push image') {
        steps{
            script{
                    docker.withDockerRegistry([ credentialsId: "dockerhubaccount", url: "https://hub.docker.com/u/lucasf66" ]) {
                    dockerImage.push()
            }
        }
        }
    }
    stage('Run'){
      steps{
        script{
          sh 'docker run -p 9091:80 lumendonca/jenkins_py'
        }
      }
    }    
  }
}