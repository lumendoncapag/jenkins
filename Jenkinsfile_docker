pipeline {
  environment {
    imagename = "lumendonca/jenkins_py"
    registryCredential = 'lucasf66'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/lumendoncapag/jenkins', branch: 'master', credentialsId: 'lumendoncapag'])
 
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build("lumendonca/jenkins_py")
        }
      }
    }
     stage('Push image') {
        steps{
            script{
                    withDockerRegistry([ credentialsId: "dockerhubaccount", url: "https://hub.docker.com/u/lucasf66" ]) {
                    dockerImage.push()
            }
        }
        }
    }    
  }
}